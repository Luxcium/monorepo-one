{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "../typescript/tsconfig.json",
  "compilerOptions": {
    /* Emit Options */
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./src",
    "declarationDir": "./dist/typings",
    "outDir": "./dist/src",
    "tsBuildInfoFile": "./dist/ts-out-info.lib",
    "baseUrl": "./src",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    /* JavaScript Support */
    "allowJs": true,
    "checkJs": false,
    /* Bundled library declaration files that describe the target runtime environment. */
    "lib": ["dom", "esnext"],
    /* Package names to be included without being referenced in a source file. */
    "types": ["node"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["./src"],
  "exclude": ["dist", "**/jest.*.js"]
}
