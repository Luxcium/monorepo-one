{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "../typescript/tsconfig.json",
  "compilerOptions": {
    /* Emit Options */
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./src",
    "declarationDir": "./dist/typings",
    "outDir": "./dist/src",
    "tsBuildInfoFile": "./dist/ts-out-info.lib",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },

    "resolveJsonModule": false,
    /* Type Checking */
    "strict": true,
    /* Module Options */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    /* JavaScript Support */
    "allowJs": true,
    "checkJs": false,
    /* Bundled library declaration files */
    "lib": ["dom", "esnext"],
    /* Package names to be included */
    "types": ["node"]
  },
  "include": ["./src"],
  "exclude": ["dist", "**/jest.*.js"]
}
