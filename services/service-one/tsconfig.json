{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    /* Emit Options */
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./src",
    "declarationDir": "./out/typings",
    "outDir": "./out/src",
    "tsBuildInfoFile": "./out/ts-out-info.lib",
    "emitDecoratorMetadata": false,
    "incremental": true,
    "composite": true,
    "declaration": true,
    "experimentalDecorators": false,
    /* JavaScript Support */
    "allowJs": true,
    "checkJs": false,
    /* Bundled library declaration files that describe the target runtime environment. */
    "lib": ["dom", "esnext"],
    /* Package names to be included without being referenced in a source file. */
    "types": ["node", "heft-jest"]
  },
  "include": ["src/**/*"],

  "exclude": ["node_modules", "out", "**/jest.*.js"]
}
